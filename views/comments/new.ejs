<% include ../partials/header %>
<link rel="stylesheet" href="/css/newComment.css" media="screen" title="no title" charset="utf-8">

<div class="container col">
    <div class="row">
        <h1> Add New Comment to <%= realtors.name %> </h1>

            <form action="/realtors/<%= realtors._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>

                <div class="form-group">
                    <button class="btn"> Submit!</button>
                </div>
            </form>

        <a href="/realtors/<%= realtors._id %>">Go Back!</a>
    </div>
</div>



